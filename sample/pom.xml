<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.tacitknowledge.cobertura.report</groupId>
    <artifactId>sample</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Sample POM for plugin testing</name>
    <description>
        This can be run to execute the plugin against sample cobertura reports.

        Build and install the plugin first
    </description>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- this is the default directory for the coverage report generated by testacular.
             Override with profiles -->
        <cobertura.report.dir>PhantomJS 1.7 (Mac)</cobertura.report.dir>
    </properties>

    <dependencies>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.tacitknowledge.cobertura.report</groupId>
                <artifactId>checker</artifactId>
                <version>1.0-SNAPSHOT</version>
                <executions>
                    <execution>

                        <id>process-js-coverage</id>
                        <phase>verify</phase>
                        <configuration>
                            <!-- note that testacular will create multiple sub directories
                                 based on browser and operating system -->
                            <inputFile>jstest/${cobertura.report.dir}/coverage.xml</inputFile>
                            <skip>false</skip>
                            <haltOnFailure>true</haltOnFailure>

                            <!-- apply these to coverage element of report total -->
                            <totalLineRate>0.0</totalLineRate>
                            <totalBranchRate>0.0</totalBranchRate>

                            <!-- apply these to each package -->
                            <lineRate>0.0</lineRate>
                            <branchRate>0.0</branchRate>

                            <packages>
                                <!-- override for packages specified by wildcard -->
                                <PackageConfig>
                                    <nameOrPrefix>java.util.*</nameOrPrefix>
                                    <branchRate>0.5</branchRate>
                                    <lineRate>0.5</lineRate>
                                </PackageConfig>
                                <!-- override for specific -->
                                <PackageConfig>
                                    <nameOrPrefix>java.util.concurrent</nameOrPrefix>
                                    <branchRate>0.5</branchRate>
                                    <lineRate>0.5</lineRate>
                                </PackageConfig>
                            </packages>


                        </configuration>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>mac</id>
            <properties>
                <cobertura.report.dir>PhantomJS 1.7 (Mac)</cobertura.report.dir>
            </properties>
        </profile>
        <profile>
            <id>devvm</id>
            <properties>
                <cobertura.report.dir>PhantomJS 1.7 (Linux)</cobertura.report.dir>
            </properties>
        </profile>
        <profile>
            <id>bamboo</id>
            <properties>
                <cobertura.report.dir>PhantomJS 1.7 (Centos)</cobertura.report.dir>
            </properties>
        </profile>
    </profiles>

</project>
